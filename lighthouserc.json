{
  "ci": {
    "collect": {
      "staticDistDir": "./docs",
      "url": [
        "/",
        "/blog/",
        "/work/",
        "/about/",
        "/404.html"
      ],
      "numberOfRuns": 1
    },
    "assert": {
      "assertions": {
        "categories:performance": ["warn", {"minScore": 0.6}],
        "categories:accessibility": ["warn", {"minScore": 0.6}],
        "categories:best-practices": ["warn", {"minScore": 0.6}],
        "categories:seo": ["warn", {"minScore": 0.6}]
      }
    },
    "upload": {
      "target": "filesystem",
      "outputDir": "./.lighthouseci"
    }
  }
}
